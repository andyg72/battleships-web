<% if session[:grid_display] %>
  <table class="opponents-grid">
    <th colspan="11">Your shots at <%= GAME.opponent_name(session[:current_player]) %></th>
      <tr><td></td>
      <% [*"A".."J"].each do |column| %>
    <td><%= column %></td>
      <% end %></tr>
    <% GAME.opponent_object(session[:current_player]).board.display_opponents_board.each_slice(10).with_index do |slice, index| %>
      <tr>
        <td><%= index +1 %></td>
        <% slice.each do |value|%>
        <td><%= value %></td>
        <%end%>
      </tr>
    <%end%>
  </table>

<h3>Key:</h3>
<p> - yet to be shot at.</p>
<p> S you hit a ship.</p>
<p> M you hit water.</p>
<% end %>