<% if session[:grid_display] %>
<% indexed_rows = ["A","B","C","D","E","F","G","H","I","J"] %>
  <table class="opponents-grid">
    <th colspan="11">Your shots at <%= GAME.opponent_name %></th>
      <tr><td></td>
      <% [*1..10].each do |column| %>
    <td><%= column %></td>
      <% end %></tr>
    <% GAME.opponents_board.each_slice(10).with_index do |slice, index| %>
      <tr>
        <td><%= indexed_rows[index] %></td>
        <% slice.each do |value|%>
        <td style="font-weight: <%= ['M','S'].include?(value) ? 'bold' : 'normal' %>" ><%= value %></td>
        <%end%>
      </tr>
    <%end%>
  </table>

<h3>Key:</h3>
<p> - unknown, yet to be shot at.</p>
<p><span style="font-weight: bold;">S</span> you hit a ship.</p>
<p><span style="font-weight: bold;">M</span> you hit water.</p>
<% end %>